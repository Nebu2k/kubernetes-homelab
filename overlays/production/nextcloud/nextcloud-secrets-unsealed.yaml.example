---
# Example unsealed secret - replace with sealed version
# Seal it: kubeseal --format=yaml < nextcloud-secrets-unsealed.yaml > nextcloud-secrets-sealed.yaml

apiVersion: v1
kind: Secret
metadata:
  name: nextcloud-secrets
  namespace: nextcloud
type: Opaque
stringData:
  # Nextcloud admin credentials (keys match Helm chart expectations)
  username: "admin"
  password: "changeme-strong-password"  # Replace with secure password
  
  # PostgreSQL database password
  postgresql-password: "changeme-db-password"  # Replace with secure password
  
  # Redis cache password
  redis-password: "changeme-redis-password"  # Replace with secure password
  
  # Nextcloud Metrics token (create in Nextcloud Admin UI under Security > Metrics or via occ)
  # Example placeholder; replace with the actual metrics token
  nextcloud-token: "changeme-nextcloud-metrics-token"

