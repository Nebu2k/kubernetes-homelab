# Seal with: kubeseal --format=yaml --controller-namespace=kube-system < grafana-credentials-unsealed.yaml > grafana-credentials-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: homepage-grafana
  namespace: homepage
type: Opaque
stringData:
  username: "admin"
  password: "your-grafana-password-here"  # Get from: kubectl get secret -n monitoring grafana-admin-credentials -o jsonpath="{.data.admin-password}" | base64 -d
