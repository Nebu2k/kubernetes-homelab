# AlertManager SMTP credentials for Amazon SES
# Seal with: kubeseal --format=yaml --controller-namespace=kube-system < smtp-credentials-unsealed.yaml > smtp-credentials-sealed.yaml
apiVersion: v1
kind: Secret
metadata:
  name: alertmanager-smtp-credentials
  namespace: monitoring
type: Opaque
stringData:
  # Amazon SES SMTP username (usually starts with AKIA...)
  username: YOUR-SES-SMTP-USERNAME
  # Amazon SES SMTP password
  password: YOUR-SES-SMTP-PASSWORD
