{
  // GitHub Copilot Commit Message Generation
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Follow Conventional Commits specification (https://www.conventionalcommits.org/).",
      "enabled": true
    },
    {
      "text": "Use format: <type>(<scope>): <subject>",
      "enabled": true
    },
    {
      "text": "Types: feat (minor), fix (patch), docs, style, refactor, perf, test, build, ci, chore (no release)",
      "enabled": true
    },
    {
      "text": "For breaking changes add '!' after type or 'BREAKING CHANGE:' in footer",
      "enabled": true
    },
    {
      "text": "Scope examples: traefik, cert-manager, argocd, metallb, homepage, apps, overlays",
      "enabled": true
    },
    {
      "text": "Subject: imperative mood, no period, max 72 chars",
      "enabled": true
    },
    {
      "text": "Examples: 'feat(traefik): add rate limiting middleware', 'fix(dns): resolve timeout issues', 'docs(readme): update installation steps'",
      "enabled": true
    }
  ],
  
  // Git configuration
  "git.inputValidation": "always",
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 72
}
