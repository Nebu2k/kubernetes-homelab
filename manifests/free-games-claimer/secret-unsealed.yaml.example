# kubeseal --cert sealed-secrets-pub-cert.pem --format=yaml < manifests/free-games-claimer/secret-unsealed.yaml > manifests/free-games-claimer/secret-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: free-games-claimer-secret
  namespace: free-games-claimer
type: Opaque
stringData:
  # Epic Games Credentials
  epic-email: "your-epic-email@example.com"
  epic-password: "your-epic-password"
  # epic-otpkey: "BASE32ENCODEDKEY"  # Optional für 2FA

  # Amazon Prime Gaming Credentials
  prime-email: "your-amazon-email@example.com"
  prime-password: "your-amazon-password"
  # prime-otpkey: "BASE32ENCODEDKEY"  # Optional für 2FA

  # GOG Credentials
  gog-email: "your-gog-email@example.com"
  gog-password: "your-gog-password"

  # Notification (Apprise Format)
  # Examples:
  # - Email: mailto://user:password@smtp.example.com?from=sender@example.com&to=recipient@example.com
  # - Discord: discord://webhook_id/webhook_token
  # - Multiple: mailto://... discord://...
  notify-url: "mailto://smtp-user:smtp-password@smtp.example.com:587?from=games@example.com&to=your-email@example.com"
