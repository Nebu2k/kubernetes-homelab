#kubeseal --format=yaml --controller-namespace=kube-system < manifests/beszel/secret-unsealed.yaml > manifests/beszel/secret-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: beszel-s3-credentials
  namespace: beszel
  labels:
    app: beszel-hub
type: Opaque
stringData:
  S3_ENDPOINT: "https://minio.elmstreet79.de"  # Replace with your S3 endpoint
  S3_BUCKET: "beszel-backups"  # Replace with your bucket name
  S3_ACCESS_KEY: "your-access-key-id"  # Replace with your S3 access key
  S3_SECRET_KEY: "your-secret-access-key"  # Replace with your S3 secret key
  S3_REGION: "us-east-1"  # Region for MinIO or S3
  SSH_PUBLIC_KEY: "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIExampleKeyDataHere"  # Replace with SSH public key from hub
