#kubeseal --cert sealed-secrets-pub-cert.pem --format=yaml < manifests/beszel/secret-unsealed.yaml > manifests/beszel/secret-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: beszel-agent-ssh
  namespace: beszel
  labels:
    app: beszel-agent
type: Opaque
stringData:
  SSH_PUBLIC_KEY: "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIExampleKeyDataHere"  # Replace with SSH public key from hub
---
apiVersion: v1
kind: Secret
metadata:
  name: beszel-smtp
  namespace: beszel
  labels:
    app: beszel-hub
type: Opaque
stringData:
  SMTP_HOST: "email-smtp.eu-west-1.amazonaws.com"  # Replace with your SMTP server
  SMTP_USER: "your-email@gmail.com"  # Replace with your SMTP user
  SMTP_PASSWORD: "your-smtp-password-here"  # Replace with your SMTP password