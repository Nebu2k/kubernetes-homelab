# kubeseal --cert sealed-secrets-pub-cert.pem --format=yaml < manifests/proxmox-exporter/pve-api-credentials-unsealed.yaml > manifests/proxmox-exporter/pve-api-credentials-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: pve-api-credentials
  namespace: monitoring
type: Opaque
stringData:
  # Proxmox API User (format: user@pam or user@pve)
  # Create a monitoring user in Proxmox with PVEAuditor role
  username: "monitoring@pve!exporter"
  
  # Proxmox API Token Secret
  # Create in Proxmox UI: Datacenter -> Permissions -> API Tokens
  # For token-based auth: only the UUID, NOT the full PVEAPIToken= string
  password: "xxxxxxxxxxxxxxx"
  
  # Proxmox Host (without https:// or port, just hostname/IP)
  # Use direct IP address of Proxmox host (not cluster ingress IP!)
  target: "192.168.2.8"