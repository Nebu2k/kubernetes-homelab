apiVersion: v1
kind: Secret
metadata:
  name: pve-api-credentials
  namespace: monitoring
type: Opaque
stringData:
  # Proxmox API User (format: user@pam or user@pve)
  # Create a monitoring user in Proxmox with PVEAuditor role
  username: "monitoring@pve!prometheus"
  
  # Proxmox API Token Secret
  # Create in Proxmox UI: Datacenter -> Permissions -> API Tokens
  # Format: PVEAPIToken=monitoring@pve!prometheus=<UUID-TOKEN>
  password: "PVEAPIToken=monitoring@pve!prometheus=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  
  # Proxmox Host/Cluster URL
  # Format: https://proxmox-hostname:8006
  target: "https://192.168.2.x:8006"
