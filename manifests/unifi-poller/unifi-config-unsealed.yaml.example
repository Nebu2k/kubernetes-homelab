# Seal with: kubeseal --cert sealed-secrets-pub-cert.pem --format=yaml < manifests/unifi-poller/unifi-config-unsealed.yaml > manifests/unifi-poller/unifi-config-sealed.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: unifi-poller-config
  namespace: monitoring
type: Opaque
stringData:
  up.conf: |
    [poller]
        debug = false
        quiet = false
        plugins = []
        
    [prometheus]
        disable = false
        http_listen = "0.0.0.0:9130"
        report_errors = false
        namespace = "unpoller"
        
    [influxdb]
        disable = true
        
    [loki]
        disable = true
        
    [unifi]
        dynamic = false
        
    [[unifi.controller]]    
        url         = "https://unifi.elmstreet79.de"
        user        = "YOUR-USERNAME"
        pass        = "YOUR-PASSWORD"
        sites       = ["all"]
        save_ids    = true
        save_dpi    = true
        save_sites  = true
        hash_pii    = false
        verify_ssl  = false
