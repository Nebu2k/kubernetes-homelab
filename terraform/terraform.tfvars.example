# Example Terraform Variables File
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars is gitignored and will not be committed

# Proxmox Connection
proxmox_endpoint    = "https://192.168.2.8:8006"
proxmox_username    = "root@pam"
proxmox_password    = "CHANGE_ME"  # Set via TF_VAR_proxmox_password env var
proxmox_insecure    = true
proxmox_node        = "proxmox"

# VM Configuration
vm_name             = "minio-backup"
vm_id               = 500
vm_cpu_cores        = 2
vm_memory           = 4096
vm_disk_size        = 500

# Storage
vm_storage          = "longhorn-storage"
cloud_init_storage  = "longhorn-storage"
snippet_storage     = "local"  # Must support snippets (directory-based storage)
vm_disk_ssd         = true

# Network
vm_network_bridge   = "vmbr0"
vm_network_tag      = 0
vm_ip_address       = "192.168.2.15/24"
vm_gateway          = "192.168.2.1"
vm_dns_servers      = ["192.168.2.4", "192.168.2.16"]

# SSH Access
ssh_public_key      = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIINAmiR21sgqeyWKIcX1Vf2qSdFoA/6skC+xZGR6vOWa homelab"

# MinIO Credentials
minio_root_user     = "minio-admin"
minio_root_password = "CHANGE_ME"  # Set via TF_VAR_minio_root_password env var
